<!DOCTYPE html>
<html lang="PT-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css" />
    <title>Pokedex</title>
</head>
<body>
    <header>
        <section class="hbox">
            <section class="cbox1">
                <img src="/img/pokebola.png" height="50" width="50" alt="pokebola" >
            </section>
            <section class="Titulo">
                <a href="/">
                    <h1>Pokedex</h1>
                </a>
            </section>
            <section class="cadastro">
                <a href="/cadastro"><h2>Cadastrar</h2></a>
            </section>
        </section>
    </header>
    <% if(mensagem != "") {  %>
        <section id="mensagem">
            <p><%= mensagem %></p> <span id="close">&times;</span>
        </section>
    <% }  %>
    <div class="container"></div>
        <ul id="conteudo">
            <% pokedex.forEach(item => { %>
                <section class="child">
                    <a href="/detalhes/<%= pokedex.indexOf(item) %>">
                    <img src="<%= item.Imagem %>" alt="imagem do Pokemon">
                    <li><%= item.Nome %></li>
                    <li><%= item.Tipo %></li>
                    </a>
                </section>
            <% }) %> 
            
        </ul>
    </div>
    <script src="script.js"></script>
</body>
</html>