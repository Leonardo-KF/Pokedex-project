<!DOCTYPE html>
<html lang="PT-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="script.js" defer></script>
    <title>Document</title>
</head>
<body>
    <h1>Pokedex</h1>
    <ul id="conteudo">
        <% pokedex.forEach(item => { %>
            <section class="child">
                <a href="/detalhes/<%= pokedex.indexOf(item) %>">
                <img src="<%= item.imagem %>" alt="imagem do Pokemon">
                <li><%= item.nome %></li>
                <li><%= item.tipo %></li>
                </a>
            </section>
        <% }) %> 
        
    </ul>
</body>
</html>